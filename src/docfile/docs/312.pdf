<script>
function moveGalVert(inDest)
{
		
	var pg_galVertInner	= document.getElementById("pg_galVertInner");
	var navTop = document.getElementById("navTop");
	var navBot = document.getElementById("navBot");
	
	var pg_galVertPic = document.getElementsByClassName("pg_galVertPic");
	var i; 
	for(i = 0; i < pg_galVertPic.length; i++)
	{
		pg_galVertPic[i].classList.remove("active");
	}
	
	
	var topStr = pg_galVertInner.style.top;
	var top = parseInt(topStr.substr(0,topStr.length-2));
	
	if(inDest == "up")
	{
	
		navBot.classList.add("active");
		navBot.classList.remove("noactive");
		
		top += 220;
		if(top >= 0)
		{
			top = 0;
			
			navTop.classList.add("noactive");
			navTop.classList.remove("active");
		}	
		pg_galVertInner.style.top = top+"px";
		
	}
	else 
	{
		top -= 220;
		var maxValue = ((pg_galVertPic.length-3) * 220);
		var maxBtnValue = maxValue-220;
		
		if(top < -maxValue)
		{
			top += 220;
		}
		else if(top <= -maxBtnValue)
		{
			navBot.classList.add("noactive");
			navBot.classList.remove("active");	
		}
		
		navTop.classList.add("active");
		navTop.classList.remove("noactive");	
		
		pg_galVertInner.style.top = top+"px";
	}
}



</script>



